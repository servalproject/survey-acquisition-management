<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#ff111111" >
    
    <!-- header -->
    <TextView
        android:id="@+id/launcher_ui_lbl_header"
        style="@style/ui_elem_header"
        android:text="@string/launcher_ui_lbl_header" />
    
    <!-- list of form categories -->
    <ListView
        android:id="@+id/launcher_ui_list_categories"
        android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_below="@id/launcher_ui_lbl_header"
		android:layout_margin="@dimen/ui_elem_margin_top" >
    </ListView>
    
    <!-- device id -->
    <TextView
        android:id="@+id/launcher_ui_lbl_device_id"
        style="@style/ui_elem_sub_header_1"
        android:layout_alignParentBottom="true" />
     
    <!-- buttons -->
    <Button
        android:id="@+id/launcher_ui_btn_contact"
        style="@style/ui_elem_btn_border_red"
        android:layout_above="@id/launcher_ui_lbl_device_id"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/launcher_ui_btn_contact"
        android:text="@string/launcher_ui_btn_contact"
        android:drawableLeft="@drawable/ic_action_gmail"/>
    
     <Button
        android:id="@+id/launcher_ui_btn_settings"
        style="@style/ui_elem_btn_border_red"
        android:layout_above="@id/launcher_ui_lbl_device_id"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/launcher_ui_btn_settings"
        android:text="@string/launcher_ui_btn_settings"
        android:drawableLeft="@drawable/ic_action_settings"/>

</RelativeLayout>