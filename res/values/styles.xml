<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppTheme" parent="@android:style/Theme" />
    
    <!-- base content styles -->
    <style name="ui_elem_content" parent="ui_elem_wrap">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginBottom">@dimen/ui_elem_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/ui_elem_margin_left</item>
        <item name="android:layout_marginRight">@dimen/ui_elem_margin_right</item>
    </style>

    <style name="ui_elem_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="ui_elem_layout_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ui_elem_layout_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ui_elem_layout_fill">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="ui_elem_layout_fill_with_margins">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/ui_elem_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/ui_elem_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/ui_elem_margin_left</item>
        <item name="android:layout_marginRight">@dimen/ui_elem_margin_right</item>
    </style>

    <style name="ui_elem_layout_fill_all">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    
    <!-- header style -->
    <style name="ui_elem_header" parent="ui_elem_content">
        <item name="android:layout_marginTop">@dimen/ui_elem_margin_top</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
    
    <style name="ui_elem_sub_header_1" parent="ui_elem_content">
        <item name="android:layout_marginTop">@dimen/ui_elem_margin_top</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
         <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
    
    <style name="ui_elem_sub_header_2" parent="ui_elem_content">
        <item name="android:layout_marginTop">@dimen/ui_elem_margin_top</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
         <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
    
    <!-- button styles -->
    <style name="ui_elem_button_default">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/ui_elem_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/ui_elem_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/ui_elem_margin_left</item>
        <item name="android:layout_marginRight">@dimen/ui_elem_margin_right</item>
    </style>
    
    <!-- text styles -->
    <style name="ui_elem_text_default" parent="ui_elem_wrap">
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="ui_elem_text_label" parent="ui_elem_text_default">
        <item name="android:layout_marginBottom">@dimen/ui_elem_margin_bottom</item>
        <item name="android:layout_marginRight">@dimen/ui_elem_margin_right</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="ui_elem_text_fill" parent="ui_elem_layout_fill">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">@dimen/ui_elem_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/ui_elem_margin_left</item>
        <item name="android:layout_marginRight">@dimen/ui_elem_xl_margin_right</item>
    </style>
    
    <style name="ui_elem_text_grid_orange" parent="ui_elem_layout_fill">
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:background">@drawable/btn_blue_matte</item>
    </style>
    
</resources>